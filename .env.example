# BetSystem AI - Environment Variables Template
# Copy to .env and fill in your values

# ===== DATABASE =====
# Development (SQLite)
DATABASE_URL=sqlite:///./betsystem.db

# Production (PostgreSQL on Supabase)
# DATABASE_URL=postgresql://user:password@host:5432/betsystem

# ===== BACKEND =====
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===== API =====
API_PORT=8000
API_HOST=0.0.0.0

# ===== FRONTEND =====
VITE_API_URL=http://localhost:8000

# ===== PRODUCTION =====
# VITE_API_URL=https://api.yourdomain.com

# ===== SKILLS (Optional) =====
TAVILY_API_KEY=your-tavily-key-here
POLYMARKET_API_KEY=
SPORTSBET_ADVISOR_KEY=

# ===== MONITORING (Optional) =====
SENTRY_DSN=
DATADOG_API_KEY=

# ===== BACKUP =====
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
